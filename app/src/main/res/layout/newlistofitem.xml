<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp">

           <!-- <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_delivery_truck_colour" />-->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/orderplaced"
                app:lottie_rawRes="@raw/orderplaced"
                android:layout_width="100dp"
                android:layout_height="80dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_repeatMode="restart"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:layout_marginLeft="15dp" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/readyforpickup"
                app:lottie_rawRes="@raw/readyforpickup"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_repeatMode="restart"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:layout_marginLeft="15dp" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/deliveryontheway"
                android:layout_width="100dp"
                android:layout_height="80dp"
                app:lottie_autoPlay="true"

                app:lottie_loop="true"
                app:lottie_rawRes="@raw/deliveryontheway"
                app:lottie_repeatMode="restart"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_marginLeft="15dp" />
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/delivered"
                app:lottie_rawRes="@raw/completed"
                android:layout_width="120dp"
                android:layout_height="80dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_repeatMode="restart"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_marginLeft="15dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/listItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="0dp"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/billnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="0dp"
                    android:text="6"
                    android:textSize="15dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/finalbilllist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="25dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/orderStatus_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="25dp"
                    android:hint="status"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:visibility="visible" />


            </RelativeLayout>

            <TextView
                android:id="@+id/timeList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="25dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:textSize="15dp" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>